<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="${packageName}.${activityClass}">
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dip"
        android:background="@color/main_layout_bg"
        android:orientation="vertical"
        android:weightSum="16">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dip"
             android:layout_marginTop="8dip"
             android:layout_weight="1.86"
             android:background="@color/words_layout_bg"
             android:orientation="horizontal" >

	         <LinearLayout  
		        android:layout_width="0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:background="@color/words_layout_bg">
	        <LinearLayout  
		        android:layout_width="0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:background="@color/words_layout_bg">
	        	<TextView
	        	    android:id="@id/search_detail_text_word"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent" 
	        	    android:text="gloomy"
	        	    android:textColor="@color/words_font_normal"
	        	    android:textSize="22dip"
	        	    android:gravity="center_vertical"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="10dip"/> 
	        	<TextView
	        	    android:id="@id/search_detail_text_symbols"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="['ɡlu:mɪ]"
	        	    android:textColor="@color/symbol_font"
	        	    android:textSize="16sp"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="5dip"/>    
	        	</LinearLayout>    
        	</LinearLayout> 
        	<ImageButton 
	        	    android:id="@id/search_detail_button_add"
        	     	android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
					android:layout_marginRight="10dip"
	        	    android:background="@drawable/button_search_add_selector"
	        	    android:layout_gravity="right|center_vertical"/>  
        </LinearLayout>
        <LinearLayout  
            android:id="@id/word_detail_content_layout"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="2"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="2dip">
        	<TextView
        	    android:id="@id/search_detail_text_content"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="2"
        	    android:gravity="center_vertical"
        	    android:ellipsize="end"
        	    android:textColor="@color/symbol_font"
        	    android:textSize="16dip"
        	    android:layout_gravity="center_vertical"
        	    android:layout_marginLeft="10dip"
        	    />
        </LinearLayout>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="例句"
            android:layout_marginLeft="10dip"/>
         <RelativeLayout
            android:id="@id/search_detail_layout_example1"  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="12"
	        android:layout_marginTop="3dip"
	        android:background="@color/words_layout_bg"
	        android:orientation="vertical">
        	<TextView
        	    android:id="@id/search_detail_text_example1"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginLeft="5dip"
        	    android:layout_marginTop="5dip"
        	    android:layout_marginRight="10dip"
        	    android:lines="12"
        	    android:textColor="@color/example_font"
        	    android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
