<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="${packageName}.${activityClass}">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:background="@color/main_layout_bg"
        android:orientation="vertical">
        
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="7dip">
	        	<TextView
	        	    android:id="@id/reading_detail_text_title"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:layout_gravity="center_horizontal"
					android:text="Text 1"
	        	    android:textColor="@color/words_font_normal"
	        	    android:textSize="20dip"
	        	    android:gravity="center"
					android:layout_centerHorizontal="true"/>
			<ImageButton
				android:id="@+id/reading_detail_button_volume"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/button_volume_selector"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="10dip"/>
        </RelativeLayout>
       
       <RelativeLayout  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="11"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="5dip"
	        android:orientation="vertical">
        	<TextView
        	    android:id="@id/reading_detail_text_content"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginLeft="5dip"
        	    android:layout_marginTop="5dip"
        	    android:layout_marginRight="10dip"
        	    android:singleLine="false"
        	    android:textColor="@color/example_font"
        	    android:textSize="17dip"
        	    android:ellipsize="end"
        	    android:scrollbars="none" 
        	    android:focusable="true"/>
        </RelativeLayout>
        
       <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:background="@color/words_layout_bg"
	        android:orientation="horizontal"
	        android:layout_marginTop="7dip"
		    android:gravity="center"
	        android:layout_weight="1">
	        	<ImageButton
	        	     android:id="@id/reading_detail_button_previous"
	        	     android:layout_width="25dip"
	        	     android:layout_height="25dip"
	        	     android:layout_gravity="center_vertical|left"
	     	     	 android:background="@drawable/button_previous_selector" />
	        	<Button 
		            android:id="@id/reading_detail_button_answer"
		            android:layout_width="250dip"
		            android:layout_height="match_parent" 
		            android:background="@drawable/button_detail_konwnornot_selector"
					android:gravity="center"
	        	    android:layout_gravity="center"
		            android:text="参考答案"
		            android:textColor="@color/words_font_normal"/>
	        	 <TextView  
		            android:id="@id/reading_detail_text_answer"
		            android:layout_width="250dip"
		            android:layout_height="match_parent" 
		            android:layout_gravity="center_horizontal"
		            android:background="@drawable/button_detail_konwnornot_selector"
					android:gravity="center"
					android:visibility="gone"
					android:textSize="20sp"
		            android:textColor="@color/words_font_normal"/>
	        	<LinearLayout  
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"  
				        android:gravity="right" 
				        android:layout_gravity="center">  
		        	<ImageButton
	        	     android:id="@id/reading_detail_button_next"
	        	     android:layout_width="25dip"
	        	     android:layout_height="25dip"
	        	     android:layout_gravity="right"
	        	     android:background="@drawable/button_next_selector" />
    			</LinearLayout>  
	        	 
        </LinearLayout>
        <!--<LinearLayout -->
	        <!--android:id="@id/reading_detail_layout_ad2"-->
	        <!--android:layout_height="50dip"-->
	        <!--android:layout_width="match_parent"-->
	        <!--android:layout_marginTop="5dip"-->
	        <!--android:orientation="horizontal">-->
    	<!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>