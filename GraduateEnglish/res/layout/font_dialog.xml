<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" 
    android:background="@color/words_layout_bg"
    android:layout_marginLeft="20dip"
 	android:layout_marginRight="20dip">
	<TextView 
		android:id="@id/dialog_font_text_title"	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="设置字体"
	    android:layout_marginLeft="20dip"
	    android:layout_marginTop="20dip"
	    android:textColor="@color/words_font_normal"
	    android:textSize="22sp"/>
	<View 
	    android:id="@id/dialog_font_view_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:layout_below="@id/dialog_font_text_title"
	    android:background="@color/words_font_normal"
	    android:layout_marginTop="20dip"/> 
	
	<RadioGroup 
	    android:id="@id/dialog_font_text_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/dialog_font_view_line"
	    android:layout_marginTop="20dip"
	    android:orientation="horizontal">
	    <RadioButton 
	         android:id="@id/dialog_font_radio_small"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"/>
	    <TextView 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="小"
	         android:textSize="20dip"
	         android:layout_gravity="center_vertical"
	         android:layout_marginLeft="10dip"/>
	    <RadioButton 
	         android:id="@id/dialog_font_radio_middle"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="30dip"/>
	    <TextView 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="中"
	         android:textSize="20dip"
	         android:layout_gravity="center_vertical"
	         android:layout_marginLeft="10dip"/>
	    <RadioButton 
	         android:id="@id/dialog_font_radio_big"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="30dip"/>
	     <TextView 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="大"
	         android:textSize="20dip"
	         android:layout_gravity="center_vertical"
	         android:layout_marginLeft="10dip"/>
	</RadioGroup>
	
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="60dip"
		android:layout_below="@id/dialog_font_text_content"
		android:layout_marginTop="20dip"> 
	    <Button 
		    android:id="@id/dialog_font_button_confirm"
		    android:layout_width="0dip"
		    android:layout_height="60dip"
		    android:layout_weight="1"
		    android:background="@drawable/exit_button"
		    android:textColor="@color/button_bg_black"
		    android:text="确定"/>
	    <Button 
		    android:id="@id/dialog_font_button_cancel"
		    android:layout_width="0dip"
		    android:layout_height="60dip"
		    android:layout_weight="1"
		    android:background="@drawable/exit_button"
		    android:textColor="@color/button_bg_black"
		    android:text="取消"/>
	</LinearLayout>
</RelativeLayout>
