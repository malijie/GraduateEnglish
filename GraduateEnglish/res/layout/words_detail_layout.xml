<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="${packageName}.${activityClass}">
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dip"
        android:background="@color/main_layout_bg"
        android:orientation="vertical">
        <FrameLayout
        	android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="2"
	        android:orientation="horizontal"
	        android:background="@color/words_layout_bg">
	        <TextView 
	            android:id="@id/word_detail_text_progress"
	            android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:layout_gravity="center"
	        	android:text="Lesson 1 (3/100)"
	        	android:gravity="center"
	        	android:textColor="@color/symbol_font"/>
			<ImageButton
				android:id="@id/word_detail_button_gohaed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:layout_marginRight="10dip"
				android:background="@drawable/button_go_head_selector"/>
	    </FrameLayout>
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="3"
	        android:layout_marginTop="8dip"
	        android:background="@color/main_layout_bg"
	        android:orientation="horizontal">
	        <FrameLayout
		        android:layout_width="0dip"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/words_layout_bg">
	        	<TextView
	        	    android:id="@id/word_detail_word"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent" 
	        	    android:textColor="@color/words_font_normal"
	        	    android:textSize="20sp"
	        	    android:gravity="center_vertical"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="10dip"/> 
	        	<TextView
	        	    android:id="@id/word_detail_symbol"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="['ɡlu:mɪ]"
	        	    android:textColor="@color/symbol_font"
	        	    android:textSize="16dip"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="100dip"/>
        		<ImageButton
					android:id="@id/word_detail_button_volume"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right|center_vertical"
					android:layout_marginRight="10dip"
					android:background="@drawable/button_volume_selector"/>
			</FrameLayout>
        	
        </LinearLayout>
       
        <LinearLayout  
            android:id="@id/word_detail_content_layout"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="4"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="2dip"
	        android:visibility="invisible">
        	<TextView
        	    android:id="@id/word_detail_content"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:lines="2"
        	    android:gravity="center_vertical"
        	    android:ellipsize="end"
        	    android:textColor="@color/symbol_font"
        	    android:textSize="16dip"
        	    android:layout_gravity="center_vertical"
        	    android:layout_marginLeft="10dip"
        	    />
        </LinearLayout>
        <TextView 
            android:id="@id/word_detail_text_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="例句"
            android:layout_marginLeft="10dip"
            android:visibility="invisible"/>
       
       <RelativeLayout
            android:id="@id/word_detail_example1_layout"  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="7"
	        android:layout_marginTop="3dip"
	        android:background="@color/words_layout_bg"
	        android:orientation="vertical"
	        android:visibility="invisible">
        	<TextView
        	    android:id="@id/word_detail_example1"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginLeft="5dip"
        	    android:layout_marginTop="5dip"
        	    android:layout_marginRight="10dip"
        	    android:lines="3"
        	    android:textColor="@color/example_font"
        	    android:textSize="15sp" 
        	    android:ellipsize="end"/>
        	<ImageButton
                android:id="@id/word_detail_button_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/button_detail_selector" />
        </RelativeLayout>
        <RelativeLayout  
            android:id="@id/word_detail_example2_layout"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="7"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="5dip"
	        android:orientation="vertical"
	        android:visibility="invisible">
        	<TextView
        	    android:id="@id/word_detail_example2"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginLeft="5dip"
        	    android:layout_marginRight="10dip"
        	    android:layout_marginTop="5dip"
        	    android:lines="3"
        	    android:ellipsize="end"
        	    android:textColor="@color/example_font"
        	    android:textSize="15sp" />
        	<ImageButton
                android:id="@id/word_detail_button_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/button_detail_selector" /> 
        </RelativeLayout>
		
        <LinearLayout
            android:id="@id/word_detail_layout_knownornot"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="7"
	        android:layout_marginTop="40dip"
	        android:layout_marginBottom="10dip"
	       	android:orientation="vertical">
	        <Button 
	          android:id="@id/word_detail_button_known"
	          android:layout_width="match_parent"
	          android:layout_height="0dip"
	          android:layout_weight="1"
	          android:layout_gravity="center_horizontal"
	          android:paddingLeft="10dip"
	          android:background="@drawable/button_detail_konwnornot_selector"
		   	  android:gravity="center_vertical"
		   	  android:textColor="@color/example_font"
	          android:text="@string/word_konwn"/>
	        <Button 
	          android:id="@id/word_detail_button_notknown"
	          android:layout_width="match_parent"
	          android:layout_height="0dip"
	          android:layout_weight="1"
	          android:layout_gravity="center_horizontal"
	          android:paddingLeft="10dip"
	          android:background="@drawable/button_detail_konwnornot_selector"
	          android:layout_marginTop="5dip"
		   	  android:gravity="center_vertical"
	          android:text="@string/word_notkonwn" 
	          android:textColor="@color/example_font"/>
	         <Button 
	            android:id="@id/word_detail_button_next"
	            android:layout_width="230dip"
	            android:layout_height="40dip"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/button_detail_next_selector"
				android:gravity="center"
	            android:text="下一个"
	            android:visibility="gone"
	            android:textColor="@color/font_white"/>
   		 </LinearLayout>
         <LinearLayout 
             android:id="@id/word_detail_layout_rightorwrong"
             android:layout_width="match_parent"
	         android:layout_height="0dip"
	         android:layout_weight="7"
	         android:layout_marginTop="40dip"
	         android:layout_marginBottom="10dip"
             android:visibility="gone">
	             <Button 
	                 android:id="@id/word_detail_button_right"
	                 android:layout_width="match_parent"
	                 android:layout_weight="1"
	                 android:layout_height="60dip"
	                 android:text="正确"
	                 android:background="@drawable/button_detail_right_selector"
	                 android:textColor="@color/font_white"/>
	             <Button 
	                 android:id="@id/word_detail_button_wrong"
	                 android:layout_width="match_parent"
	                 android:layout_weight="1"
	                 android:layout_height="60dip"
	                 android:layout_marginLeft="10dip"
	                 android:text="错误"
	                 android:background="@drawable/button_detail_wrong_selector"
	                 android:textColor="@color/font_white"/>
         </LinearLayout>
         <LinearLayout
            android:id="@id/word_detail_ad_layout"  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="3" 
	        android:orientation="horizontal"
	        android:layout_gravity="center"
	        android:background="@color/main_layout_bg">
      	</LinearLayout>
    </LinearLayout>
    
</LinearLayout>
