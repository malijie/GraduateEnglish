<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="${packageName}.${activityClass}">
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dip"
        android:background="@color/main_layout_bg"
        android:orientation="vertical">
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:background="@color/words_layout_bg"
	        android:orientation="horizontal">
	        	<TextView
	        	    android:id="@id/writting_answer_detail_text_title"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="match_parent"
	        	    android:textColor="@color/words_font_normal"
	        	    android:textSize="20dip"
	        	    android:gravity="center"
	        	    android:layout_toRightOf="@id/reading_detail_button_previous"
	        	    android:layout_gravity="center_horizontal"/>
        </RelativeLayout>
       
       <RelativeLayout  
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="5dip"
	        android:orientation="vertical">
        	<TextView
        	    android:id="@id/writting_answer_detail_text_answer"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:singleLine="false"
        	    android:textColor="@color/example_font"
        	    android:textSize="17dip"
        	    android:ellipsize="end"
        	    android:scrollbars="none" 
        	    android:focusable="true"/> 
        </RelativeLayout>
		<!-- <LinearLayout
                     android:id="@id/writting_answer_detail_layout_ad"
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:orientation="horizontal"
                     android:layout_marginTop="5dip"
                     android:layout_weight="2"/>-->
    </LinearLayout>
</LinearLayout>
