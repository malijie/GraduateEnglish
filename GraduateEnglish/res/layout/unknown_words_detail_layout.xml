<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="${packageName}.${activityClass}">
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dip"
        android:background="@color/main_layout_bg"
        android:orientation="vertical">
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:background="@color/main_layout_bg"
	        android:orientation="horizontal">
	        <LinearLayout  
		        android:layout_width="0dip"
		        android:layout_height="40dip"
		        android:layout_weight="2"
		        android:background="@color/words_layout_bg">
	        	<TextView
	        	    android:id="@id/unkonwn_words_detail_text_word"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:textColor="@color/words_font_normal"
	        	    android:textSize="20dip"
	        	    android:gravity="center_vertical"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="20dip"/> 
	        	<TextView
	        	    android:id="@id/unkonwn_words_detail_text_symbol"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:textColor="@color/symbol_font"
	        	    android:textSize="16dip"
	        	    android:layout_gravity="center_vertical"
	        	    android:layout_marginLeft="10dip"/>     
        	</LinearLayout>
        	
        </LinearLayout>
       
        <LinearLayout  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="2dip">
        	<TextView
        	    android:id="@id/unkonwn_words_detail_text_content"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:lines="2"
        	    android:gravity="center_vertical"
        	    android:ellipsize="end"
        	    android:textColor="@color/symbol_font"
        	    android:textSize="16dip"
        	    android:layout_gravity="center_vertical"
        	    android:layout_marginLeft="10dip"
        	    android:scrollbars="vertical"/>
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="例句"
            android:layout_marginLeft="10dip"/>
       
       <RelativeLayout  
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="9"
	        android:background="@color/words_layout_bg"
	        android:layout_marginTop="5dip"
	        android:orientation="vertical">
        	<TextView 
        	    android:id="@id/unkonwn_words_detail_text_example"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginLeft="5dip"
        	    android:layout_marginTop="5dip"
        	    android:layout_marginRight="10dip"
        	    android:textColor="@color/example_font"
        	    android:textSize="17dip"
        	    android:ellipsize="end"
        	    android:scrollbars="none" 
        	    android:focusable="true"/>
       
        </RelativeLayout>
         <LinearLayout 
	        android:id="@id/unkonwn_words_detail_layout_ad"
	        android:layout_height="20dip"
	        android:layout_width="match_parent"
	        android:layout_marginTop="5dip"
	        android:orientation="horizontal"/>
        <Button 
            android:id="@id/unkonwn_words_detail_button_delete"
            android:layout_width="230dip"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_example_notknown_selector"
			android:gravity="center"
            android:text="删除此生词"
            android:layout_marginTop="10dip"
            android:textColor="@color/font_white"/>
    </LinearLayout>
</LinearLayout>
