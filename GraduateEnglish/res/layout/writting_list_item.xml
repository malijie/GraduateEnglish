<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/word_list_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}">
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="120dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="5dip"
    	android:layout_marginRight="10dip">
        <ImageView 
            android:id="@id/writting_list_item_image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="7dip"
            android:src="@drawable/listview_writting"/>
        <TextView
	        android:id="@id/writting_list_item_text_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:textColor="@color/word_button_kown"
	        android:layout_below="@id/writting_list_item_image_icon"/>
		<TextView
	        android:id="@id/writting_list_item_text_part"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        android:textColor="@color/word_button_kown"
	        android:text="Part A"
	        android:layout_marginLeft="5dip"
	        android:layout_below="@id/writting_list_item_text_date"/>
        <TextView
            android:id="@id/writting_list_item_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/writting_list_item_image_icon"
            android:layout_toRightOf="@id/writting_list_item_image_icon"
            android:layout_marginLeft="30dip"
            android:textColor="@color/words_font_normal"
            android:textSize="17sp" />

        <TextView
            android:id="@id/writting_list_item_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="4" 
            android:layout_marginTop="5dip"
            android:ellipsize="end" 
            android:layout_marginLeft="20dip"
            android:layout_below="@id/writting_list_item_text_title"
            android:layout_toRightOf="@id/writting_list_item_text_part"
            android:textColor="@color/example_font" 
            android:textSize="15sp"
            />
       
    </RelativeLayout>
    
</RelativeLayout>
